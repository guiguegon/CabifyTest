<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_estimate"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4dp"
    android:layout_marginEnd="2dp"
    android:layout_marginLeft="2dp"
    android:layout_marginRight="2dp"
    android:layout_marginStart="2dp"
    android:foreground="?attr/selectableItemBackground"
    android:padding="8dp">

    <ImageView
        android:id="@+id/estimate_vehicle_type_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:scaleType="centerInside" />

    <TextView
        android:id="@+id/estimate_vehicle_type_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_toEndOf="@id/estimate_vehicle_type_image"
        android:layout_toLeftOf="@+id/estimate_price"
        android:layout_toRightOf="@id/estimate_vehicle_type_image"
        android:layout_toStartOf="@+id/estimate_price"
        tools:text="Executive" />

    <TextView
        android:id="@+id/estimate_vehicle_type_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/estimate_vehicle_type_title"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_toEndOf="@id/estimate_vehicle_type_image"
        android:layout_toLeftOf="@+id/estimate_price"
        android:layout_toRightOf="@id/estimate_vehicle_type_image"
        android:layout_toStartOf="@+id/estimate_price"
        android:alpha="0.8"
        android:textSize="12sp"
        tools:text="Mercedes E Class or similar. 4pax Mercedes E Class or similar. 4pax Mercedes E Class or similar. 4pax" />

    <TextView
        android:id="@+id/estimate_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/estimate_vehicle_type_image"
        android:layout_centerVertical="true"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_toLeftOf="@+id/estimate_currency"
        android:layout_toStartOf="@+id/estimate_currency"
        tools:text="16,71" />

    <TextView
        android:id="@+id/estimate_currency"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="2dp"
        android:layout_marginStart="2dp"
        tools:text="â‚¬" />

</RelativeLayout>